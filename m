 	if (!system_supports_mte())
@@ -40,6 +59,8 @@ void flush_mte_state(void)
 	clear_thread_flag(TIF_MTE_ASYNC_FAULT);
 	/* disable tag checking */
 	set_sctlr_el1_tcf0(0);
+	/* reset tag generation mask */
+	set_gcr_el1_excl(0);
 }
 
